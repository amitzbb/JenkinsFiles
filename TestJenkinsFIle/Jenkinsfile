pipeline {
    agent { node { label 'AmitPC' } }
    parameters {
       string (name: 'Images' , defaultValue :'D:\\WorkSpace\\Fox8\\Dev\\FoxTestingFrameworkDev\\images' ,description: 'Paramter') 
    }
     stages {
        stage('Getting Code From P4') {
            steps {
            bat 'p4 sync --parallel=threads=4,batch=8,batchsize=524288,min=1,minsize=589824 //depot/Fox8/Dev/FoxTestingFrameworkDev/...#head'
            }
        }
        stage('Compliling Automation project'){
            steps {
                    bat 'D:\\nuget\\nuget.exe restore "D:\\WorkSpace\\Fox8\\Dev\\FoxTestingFrameworkDev\\FoxAutomation.sln"'
                    bat '''cd "C:\\Program Files (x86)\\MSBuild\\14.0\\Bin"
                    MSBuild.exe "D:\\WorkSpace\\Fox8\\Dev\\FoxTestingFrameworkDev\\FoxAutomation.sln" /t:Clean /verbosity:minimal
                    MSBuild.exe "D:\\WorkSpace\\Fox8\\Dev\\FoxTestingFrameworkDev\\FoxAutomation.sln" /p:Configuration=Release /p:DebugSymbols=false /p:DebugType=None /verbosity:minimal'''

            }
        }
        stage ('SeleniumTests'){
            steps {
                bat '''
                    "C:\\Program Files (x86)\\NUnit.org\\nunit-console\\nunit3-console.exe" D:\\WorkSpace\\Fox8\\Dev\\FoxTestingFrameworkDev\\BusinessScenarios\\bin\\Debug\\BusinessScenarios.dll --where "Category==Amit"'''
            }
        }
        stage('Copying ScreenShots to Jenkins Workspace') {
            steps {
                parallel (
                    "Urgent Cat" : {
                      powershell 'Copy-Item -Path D:\\WorkSpace\\Fox8\\Dev\\FoxTestingFrameworkDev\\Images -Destination $WORKSPACE -Recurse -Force'
                    }                 
                    
                )
            }
        }
     }
     post {
         always {
            nunit testResultsPattern: 'TestResult.xml'
            archiveArtifacts 'Images/*.*'
        }
         failure {
            emailext body: '''$DEFAULT_CONTENT
                            The site can be reached at:
                            http://dev-pilot.bks/Login.aspx''', subject: 'Dev-Pilot Unit Tests status', to: 'amitbl@britannica-ks.com'
        }
    }
} 
